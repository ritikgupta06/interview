<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>e-Shielded | Your Hiring Buddy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <link rel="shortcut icon" href="./images/favicon.png" type="image/x-icon" />
    <style>
      .typewriter {
        overflow: hidden;
        white-space: nowrap;
        animation: typing 3.5s steps(40, end) infinite;
      }
      @keyframes typing {
        0% {
          width: 0;
        }
        50% {
          width: 100%;
        }
        100% {
          width: 0;
        }
      }
    </style>
  </head>
  <body class="bg-white min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm fixed w-full top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="flex items-center">
            <i class="fas fa-shield-alt h-8 w-8 text-purple-700 text-2xl"></i>
            <span class="ml-2 text-2xl font-bold text-purple-700"
              >e-Shielded</span
            >
          </a>
          <div class="flex items-center gap-4">
            <form action="/createmeet" method="post">
              <button
                type="submit"
                class="px-4 py-2 bg-purple-700 text-white rounded-lg hover:bg-purple-800 transition-all"
              >
                Create Meeting
              </button>
            </form>
            <div class="relative">
              <form action="/joinmeet" method="post">
                <input
                  id="idinput"
                  type="text"
                  name="search"
                  placeholder="Enter Meeting ID"
                  required
                  class="pl-4 pr-20 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                />
                <button
                  type="submit"
                  class="absolute right-2 top-1/2-translate-y-1/2 px-4 py-1 bg-purple-700 text-white rounded-lg hover:bg-purple-800 transition-all"
                >
                  Join
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="pt-24 pb-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row items-center gap-12">
          <div class="lg:w-1/2 text-center lg:text-left">
            <div
              class="inline-flex items-center px-4 py-2 bg-purple-100 rounded-full mb-6"
            >
              <span class="text-purple-700 text-sm font-medium"
                >#1 Technical Interview Platform</span
              >
            </div>
            <h1 class="text-4xl lg:text-6xl font-bold text-purple-700 mb-6">
              A Collaborative Platform for
              <span class="typewriter">Everyone</span>
            </h1>
            <p class="text-gray-600 mb-8 text-lg">
              Ace your technical interviews with our comprehensive platform
              designed for developers, students, and recruiters.
            </p>
            <div
              class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
            >
              <form action="/createmeet" method="post">
                <button
                  type="submit"
                  class="px-6 py-3 bg-purple-700 text-white rounded-lg hover:bg-purple-800 transition-all flex items-center gap-2"
                >
                  Create Meeting
                  <i class="fas fa-video"></i>
                </button>
              </form>
              <div class="relative">
                <form action="/joinmeet" method="post">
                  <input
                    id="joinId"
                    type="text"
                    name="search"
                    placeholder="Enter Meeting ID"
                    required
                    class="w-full pl-4 pr-20 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                  />
                  <button
                    type="submit"
                    class="absolute right-1.5 top-1/4 -translate-y-1/2 px-4 py-1 bg-purple-700 text-white rounded-md hover:bg-purple-800 transition-all"
                  >
                    Join
                  </button>
                </form>
              </div>
            </div>
          </div>
          <div class="lg:w-1/2">
            <img
              src="https://getvoip.com/uploads/Google-Meet.jpg"
              alt="Team collaboration"
              class="rounded-lg shadow-xl"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-purple-700 mb-4">
            Features for You
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            We provide excellent features to enhance your experience as an
            interviewee or interviewer.
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all"
          >
            <div
              class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-purple-700 mb-4"
            >
              <i class="fas fa-users"></i>
            </div>
            <h3 class="text-xl font-semibold text-purple-700 mb-2">
              Easy to Use
            </h3>
            <p class="text-gray-600">
              Intuitive interface suitable for beginners and experienced users.
            </p>
          </div>
          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all"
          >
            <div
              class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-purple-700 mb-4"
            >
              <i class="fas fa-paint-brush"></i>
            </div>
            <h3 class="text-xl font-semibold text-purple-700 mb-2">
              High-quality Design
            </h3>
            <p class="text-gray-600">
              Beautiful design that makes navigation effortless.
            </p>
          </div>
          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all"
          >
            <div
              class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-purple-700 mb-4"
            >
              <i class="fas fa-comments"></i>
            </div>
            <h3 class="text-xl font-semibold text-purple-700 mb-2">
              Chat Section
            </h3>
            <p class="text-gray-600">
              Real-time 1:1 chat functionality with other users.
            </p>
          </div>
          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all"
          >
            <div
              class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-purple-700 mb-4"
            >
              <i class="fas fa-video"></i>
            </div>
            <h3 class="text-xl font-semibold text-purple-700 mb-2">
              Video + Audio Call
            </h3>
            <p class="text-gray-600">
              Built-in calls without plugins for 1:1 or panel interviews.
            </p>
          </div>
          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all"
          >
            <div
              class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-purple-700 mb-4"
            >
              <i class="fas fa-code"></i>
            </div>
            <h3 class="text-xl font-semibold text-purple-700 mb-2">
              Collaborative IDE
            </h3>
            <p class="text-gray-600">
              Real-time coding environment with Google Docs-like editing.
            </p>
          </div>
          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all"
          >
            <div
              class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-purple-700 mb-4"
            >
              <i class="fas fa-ad"></i>
            </div>
            <h3 class="text-xl font-semibold text-purple-700 mb-2">Ad-Free</h3>
            <p class="text-gray-600">
              Enjoy an uninterrupted experience without ads.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Back to Top -->
    <a
      href="#"
      class="fixed bottom-8 right-8 bg-purple-700 text-white p-3 rounded-full shadow-lg hover:bg-purple-800 transition-all"
    >
      <i class="fas fa-arrow-up"></i>
    </a>

    <script>
      // Typewriter effect
      const words = ["Everyone", "Developers", "Students", "Recruiters"];
      let i = 0;
      const typewriter = document.querySelector(".typewriter");

      setInterval(() => {
        typewriter.textContent = words[i];
        i = (i + 1) % words.length;
      }, 3500);

      // Smooth scroll for back to top
      document.querySelector(".back-to-top").addEventListener("click", (e) => {
        e.preventDefault();
        window.scrollTo({ top: 0, behavior: "smooth" });
      });
    </script>
  </body>
</html>
