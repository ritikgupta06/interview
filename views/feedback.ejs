<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>e-Shielded | Feedback</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <style>
      .emoji {
        font-size: 2rem;
        filter: grayscale(100%);
        cursor: pointer;
        transition: all 0.3s ease;
      }
      .radio:checked + .emoji {
        filter: grayscale(0%);
        font-size: 3rem;
        transform: scale(1.2);
      }
      .radio {
        display: none;
      }
    </style>
  </head>
  <body class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="w-full max-w-md mx-auto">
      <!-- Logo -->
      <a href="/" class="flex justify-center items-center mb-8">
        <i class="fas fa-shield-alt h-8 w-8 text-purple-700 text-2xl"></i>
        <span class="ml-2 text-2xl font-bold text-purple-700">e-Shielded</span>
      </a>

      <!-- Feedback Card -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-3xl font-bold text-purple-700 text-center mb-2">
          Thank You!
        </h1>
        <p class="text-gray-600 text-center mb-6">
          Let us know how we did with your experience
        </p>

        <!-- Rating Emojis -->
        <div class="flex justify-center gap-4 mb-6">
          <label>
            <input type="radio" name="rating" value="0" class="radio" />
            <span class="emoji">ü§¨</span>
          </label>
          <label>
            <input type="radio" name="rating" value="1" class="radio" />
            <span class="emoji">üôÅ</span>
          </label>
          <label>
            <input type="radio" name="rating" value="2" class="radio" />
            <span class="emoji">üò∂</span>
          </label>
          <label>
            <input type="radio" name="rating" value="3" class="radio" />
            <span class="emoji">üòÅ</span>
          </label>
          <label>
            <input type="radio" name="rating" value="4" class="radio" />
            <span class="emoji">üòç</span>
          </label>
        </div>

        <!-- Feedback Form -->
        <form
          method="POST"
          action="https://getform.io/f/da8c7995-d4a4-4892-9e06-dae6e30ea956"
          class="space-y-4"
        >
          <textarea
            name="feedback"
            placeholder="What can we do to improve?"
            required
            class="w-full h-32 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none resize-none"
          ></textarea>
          <input
            type="email"
            name="email"
            placeholder="Your Email"
            required
            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
          />
          <button
            type="submit"
            class="w-full px-6 py-3 bg-purple-700 text-white rounded-lg hover:bg-purple-800 transition-all font-semibold"
          >
            Send Feedback
          </button>
        </form>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.querySelector("form");
        const radios = document.querySelectorAll(".radio");

        form.addEventListener("submit", (e) => {
          const rating = document.querySelector(".radio:checked");
          if (!rating) {
            e.preventDefault();
            alert("Please select a rating before submitting");
            return;
          }

          // Add rating to form data
          const ratingInput = document.createElement("input");
          ratingInput.type = "hidden";
          ratingInput.name = "rating";
          ratingInput.value = rating.value;
          form.appendChild(ratingInput);

          alert("Thank you for your feedback!");
        });

        // Visual feedback for radio selection
        radios.forEach((radio) => {
          radio.addEventListener("change", () => {
            document.querySelectorAll(".emoji").forEach((emoji) => {
              emoji.style.filter = "grayscale(100%)";
              emoji.style.fontSize = "2rem";
              emoji.style.transform = "scale(1)";
            });
          });
        });
      });
    </script>
  </body>
</html>
